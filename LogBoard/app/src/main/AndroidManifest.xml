<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/monogram_logo_hq"
        android:label="@string/english_ime_name"
        android:supportsRtl="true"
        >

        <service
            android:name="com.levantis.logboard.latin.LatinIME"
            android:label="@string/english_ime_name"
            android:directBootAware="true"
            android:exported="false"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>

            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

        <activity
            android:name="com.levantis.logboard.latin.settings.SettingsActivity"
            android:exported="true"
            android:label="@string/english_ime_name"
            android:theme="@style/platformSettingsTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.levantis.logboard.auth.AuthActivity"
            android:exported="true"
            android:theme="@style/platformAuthTheme"
            >
        </activity>

        <receiver
            android:name="com.levantis.logboard.latin.SystemBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.LOCALE_CHANGED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>