<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    >

    <!-- Logo -->
    <ImageView
        android:id="@+id/titleLogo"
        android:layout_width="252dp"
        android:layout_height="175dp"
        android:layout_marginTop="60dp"
        android:contentDescription="LogBoard Logo"
        android:scaleType="fitCenter"
        android:src="@drawable/logboard_logo_transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_logboard"
        android:textColor="#03424C"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleLogo"
        android:fontFamily="@font/montserrat_bold"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/textViewSubWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_log_in_to_continue"
        android:textColor="#03424C"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewWelcome"
        android:layout_marginTop="8dp" />

    <!-- Google Continue with Google Button -->
    <Button
        android:id="@+id/btnGoogleAuth"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/montserrat_medium"
        android:drawableStart="@drawable/google_25"
        android:text="Continue with Google"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:padding="10dp"
        app:iconGravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSubWelcome" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9">
    </androidx.constraintlayout.widget.Guideline>

</androidx.constraintlayout.widget.ConstraintLayout>
