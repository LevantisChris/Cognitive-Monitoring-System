<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:maxHeight="600dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/main_300">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header with title and close button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Key Locations Map"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_bold"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnCloseMap"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Close map"
                android:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Map View -->
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp" />

        <!-- Scrollable Info section -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="120dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/locationCountTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading locations..."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/mapInfoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ  Green = HOME | ðŸ”´ Red = Other locations"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_extralight"
                    android:alpha="0.8" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
